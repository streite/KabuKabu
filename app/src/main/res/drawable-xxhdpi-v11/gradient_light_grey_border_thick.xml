<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="10dp">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@color/colorGrey3" />
        </shape>
        <gradient
            android:angle="270"
            android:startColor="@color/colorWhite4"
            android:endColor="@color/colorWhite1">
        </gradient>
    </item>
    <item
        android:left="10dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="3dp"
                android:color="@color/colorWhite1" />
        </shape>
        <gradient
            android:angle="270"
            android:startColor="@color/colorWhite4"
            android:endColor="@color/colorWhite1">
        </gradient>
    </item>
</layer-list>