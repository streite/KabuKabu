<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/earnings_child_item_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    Â 
    <RelativeLayout
        android:id="@+id/rlvEarningsListViewTickerInfo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rlvPortfolioViewLeftIcon"
        android:orientation="vertical"
        android:layout_weight="20"
        android:padding="3dp">

        <TextView
            android:id="@+id/EarningsListViewTicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="TICKER"
            android:textColor="@color/colorGrey1"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/EarningsListViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/EarningsListViewTicker"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:text="NAME"
            android:textColor="@color/colorGrey1"
            android:textSize="10sp"
            android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlvEarningsListViewDate"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rlvEarningsListViewTickerInfo"
        android:paddingRight="5dp"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/EarningsListViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:text="Date"
            android:textColor="@color/colorGrey1"
            android:textSize="18sp"
            android:textStyle="italic" />

    </RelativeLayout>

</RelativeLayout>