<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlv_stock_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_grey_bg"
    tools:context="com.mairyu.app.kabukabu.StockInfo">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/llhStockInfoTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtStockInfoTicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/toolbar"
            android:background="@android:color/transparent"
            android:inputType="textCapCharacters"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="TICKER"
            android:textColor="@color/colorGrey1"
            android:textSize="48sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llhStockInfoShares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llhStockInfoTicker"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStockInfoShares"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:text="Shares: "
            android:textColor="@color/colorBrown1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtStockInfoShares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edtStockInfoTicker"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="SHARES"
            android:textColor="@color/colorGrey1"
            android:textSize="48sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llhStockInfoBasis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llhStockInfoShares"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStockInfoBasis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:text="Basis: "
            android:textColor="@color/colorBrown1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtStockInfoBasis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:inputType="numberDecimal"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="BASIS"
            android:textColor="@color/colorGrey1"
            android:textSize="48sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llhStockInfoComission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llhStockInfoBasis"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtStockInfoComission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:text="Comission: "
            android:textColor="@color/colorBrown1"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtStockInfoComission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edtStockInfoBasis"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="COMISSION"
            android:textColor="@color/colorGrey1"
            android:textSize="48sp" />

    </LinearLayout>

</RelativeLayout>
