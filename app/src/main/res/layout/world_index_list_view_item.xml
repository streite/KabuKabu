<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlvWorldIndex"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    Â 
    <RelativeLayout
        android:id="@+id/rlhWorldIndex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvWorldIndexFlag"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/brazil" />

        <RelativeLayout
            android:id="@+id/rlhWorldIndexInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imvWorldIndexFlag"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_weight="20"
            android:padding="3dp">

            <TextView
                android:id="@+id/txtWorldIndexName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingTop="1dp"
                android:text="TICKER"
                android:textColor="@color/colorGrey1"
                android:textSize="18sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/txtWorldIndexPercChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtWorldIndexName"
                android:layout_gravity="center_vertical|right"
                android:paddingBottom="1dp"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:text="G/L"
                android:textColor="@color/colorGrey1"
                android:textSize="18sp"
                android:textStyle="" />

            <ImageView

                android:id="@+id/imvWorldIndexTrend"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtWorldIndexPercChange"
                android:layout_gravity="center_vertical|right"
                android:layout_centerVertical="true"
                android:paddingBottom="1dp"
                android:paddingLeft="15dp"
                android:paddingTop="1dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_uptick_green" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>