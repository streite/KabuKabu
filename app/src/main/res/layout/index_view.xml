<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlhIndexView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_light_yellow_bg"
        tools:context="com.mairyu.app.kabukabu.CategoryView">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <GridLayout
            android:id="@+id/glIndexView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2">

            <ImageView
                android:id="@+id/usaFlag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/usa" />

            <GridLayout
                android:id="@+id/glUSA"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:columnCount="3"
                android:paddingLeft="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txtIndexViewUSADowName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Name"
                    android:layout_column="0"/>

                <ImageView
                    android:id="@+id/txtIndexViewUSADowTick"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_downtick_red" />

                <TextView
                    android:id="@+id/txtIndexViewUSADowChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/colorGrey1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtIndexViewUSASPName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Name"
                    android:layout_column="0"/>

                <ImageView
                    android:id="@+id/txtIndexViewUSASPTick"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_downtick_red" />

                <TextView
                    android:id="@+id/txtIndexViewUSASPChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/colorGrey1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtIndexViewUSANQName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="Name"
                    android:layout_column="0"/>

                <ImageView
                    android:id="@+id/txtIndexViewUSANQTick"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_downtick_red" />

                <TextView
                    android:id="@+id/txtIndexViewUSANQChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/colorGrey1"
                    android:textSize="20sp" />

            </GridLayout>

            <ImageView
                android:id="@+id/chinaFlag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/china" />

            <ImageView
                android:id="@+id/hongkongFlag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/hongkong" />

            <ImageView
                android:id="@+id/taiwanFlag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/taiwan" />

            <ImageView
                android:id="@+id/japanFlag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/japan" />

            <ImageView
                android:id="@+id/koreaFlag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/korea" />

            <ImageView
                android:id="@+id/indiaFlag"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:layout_marginBottom="30dp"
                android:layout_gravity="top|center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/india" />

        </GridLayout>

    </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>

    <ListView android:id="@+id/left_drawer"

        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:background="@drawable/gradient_grey_bg"/>

</android.support.v4.widget.DrawerLayout>