<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gradient_yellow_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/portfolioListViewTicker"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="TICK"
        android:textColor="@color/colorYellow1"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/portfolioListViewCompany"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:layout_toRightOf="@+id/portfolioListViewTicker"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:text="Company"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorYellow1"
        android:textSize="14sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/llhGainLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/llhPrice"
        android:orientation="vertical">

        <TextView
            android:id="@+id/portfolioListViewVolume"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:gravity="right"
            android:text="Volume"
            android:textColor="@color/colorYellow1"
            android:textSize="14dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llhPrice"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/portfolioListViewChangePerc"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="PERC"
            android:textColor="@color/colorYellow1"
            android:textSize="24sp"
            android:textStyle="italic" />

    </LinearLayout>

</RelativeLayout>