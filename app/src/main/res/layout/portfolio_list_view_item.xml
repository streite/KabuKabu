<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/gradient_light_yellow_bg"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/portfolioListViewTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/gradient_yellow_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="TICKER"
        android:textColor="@color/colorYellow1"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/portfolioListViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:paddingRight="15dp"
        android:text="PRICE"
        android:textColor="@color/colorYellow1"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/portfolioListViewPercChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/portfolioListViewPrice"
        android:paddingRight="15dp"
        android:text="PERC"
        android:textColor="@color/colorYellow1"
        android:textSize="14sp"
        android:textStyle="italic" />

</RelativeLayout>